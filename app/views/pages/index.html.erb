<div class="container-fluid min-vh-100 m-0 p-0 h-100">
	<div class="row no-gutters min-vh-100 h-100">
		<div class="col-xl-3 d-none d-xl-block p-0 blur-middle-main"></div>
		<div class="col-xl-6 mx-auto back-main">
			<% @articles.each do |article| %>
				<div class="nes-container is-rounded is-dark">
					<h1 class="text-center my-4">
						<%= article.title%>
					</h1>
					<p class = "text-break">
						<%= article.text.truncate(100)%>
						<%= link_to "Read Full", article_path(article) %>
					</p>
					<hr>
					<small>
						Created by: <%= article.user.username if article.user %>,
						<%= time_ago_in_words(article.created_at) %> ago,
						last updated: <%= time_ago_in_words(article.updated_at) %> ago
					</small>
				</div>
			<% end %>
			<div class="row">
				<div class="col-xl-3"></div>
				<div class="col-xl-6">
					<% if !@articles.empty? %>
						<div class="nes-container is-dark is-rounded">
							<%= will_paginate @articles, :page_links => false %>
						</div>
					<% end %>
				</div>
				<div class="col-xl-3"></div>
			</div>
		</div>
		<div class="col-xl-3 d-none d-xl-block p-0 blur-middle-main"></div>
	</div>
</div>

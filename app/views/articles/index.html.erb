<% if logged_in? %>
	<div class="container-fluid min-vh-100 m-0 p-0 h-100">
		<div class="row no-gutters min-vh-100 h-100">
			<div class="col-xl-3 d-none d-xl-block p-0 blur-middle"></div>
			<div class="col-xl-6 mx-auto back">
				<h2 class="text-center my-4">Listing your posts</h2>
				<% if !current_user.articles.empty? %>
					<div class="nes-table-responsive">
						<table class="nes-table is-bordered is-centered is-dark  mx-auto text-center">
							<tr>
								<th>Title</th>
								<th>Description</th>
								<th>Action</th>
							</tr>
							<% current_user.articles.each do |article| %>
							<tr>
								<td><%= article.title %></td>
								<td class="tdscss"><%= article.text %></td>
								<td>
									<%= link_to 'Edit', edit_article_path(article) %>
									<%= link_to 'Show', article_path(article) %>
									<%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %>
								</td>
							</tr>
							<% end %>
						</table>
					</div>
				<% else %>
					<p class="text-center"><small>...but there's none!</small></p>
				<% end %>
				<p class="my-3 text-center"><%= link_to 'Create new article', new_article_path(@article) ,'class': "nes-btn",'id': "art-create" %></p>
			</div>
			<div class="col-xl-3 d-none d-xl-block p-0 blur-middle"></div>
		</div>
	</div>
<% else %>
	<% require_user %>
<% end %>